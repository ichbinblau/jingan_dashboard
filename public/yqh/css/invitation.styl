body
    font-size 12px
.reveal .slides
    left 0
    top 0
    width 100% !important
    height 100% !important

.reveal .slides section
    left 0
    top 0
    padding 0 !important

.page
    position relative

.reveal
    div
        text-align left

    .flag
        position absolute
        padding-top 6px
        top 0
        right 30px
        width 52px
        height 63px
        font-size 15px
        font-weight bold
        line-height 1.3
        background url(../imgs/flag.png)
        color rgb(119,60,28)
        text-align center
        z-index 25

    .bar-bottom
        position absolute
        bottom 0
        left 0
        width 100%
        background rgba(240, 0, 0, 0.9)
        text-align center
        padding 30px 0

    .bar-top
        @extend .reveal .bar-bottom
        top 0
        bottom auto
        background rgba(0, 240, 0, 0.9)

    .guest-page
        .intro-wrap
            position relative
            .guest-intro-block
                position absolute
                img
                    height 70px
                .bar
                    position absolute
                    width 300px
                    bottom -5px
                    background red
                    opacity 0.8
                    padding 0 10px
                    line-height 2
                    color #fff
                    font-size 10px
    .swiper-container
        position absolute
        top 50%
        height 310px
        margin-top -200px

    .arrange-block
        font-size 12px
        $w = 220px
        width $w + 15px
        margin-top 50px

        .arrange-block-wrapper
            width $w
            height $w + 10px

            background rgba(254,249,197,0.8)
            border-radius 10px
            table
                margin 0 10px
                td.left
                    padding-top 2px
                    font-size 14px
                    color rgb(1,80,151)
                    width: 28px
                td.right
                    padding-top 2px
                    text-align left
                    vertical-align top
                    p
                        text-align left
                        font-size 11px
            .title
                padding 10px
                font-size 20px
                background rgba(1,80,151,0.8)
                color #fff
                border-radius 10px 10px 0 0
                margin-bottom 3px
            p
                text-align center
                font-size 12px
                margin-bottom 0
                line-height 1.3
            .time
                font-size 16px
                color rgb(1,80,151)


    .arrange-info
        position absolute
        width 100%
        bottom 0
        left 0
        .info-left, .info-right
            background rgba(240,240,255,0.5)
            height 120px
            float left
        .info-left
            width:30%
            .top
                height 35px
                background-color #005098
                text-align center
                color #ffffff
                font-weight bold
                font-size 18px
                line-height 35px
            p
                margin-top 10px
                text-align center
                color rgb(1,80,151)
                font-size 20px
                line-height 1
        .info-right
            background rgba(240,240,255,0.8)
            width:70%
            p
                margin 20px 0 0 20px
                line-height 2

        .info-bottom
            img
                width 100%
                max-width 100%
                max-height 100%
                display block


    .intro-content
        color #fff
        position absolute
        bottom 0
        width 90%
        padding 10px 5% 38px 5%
        background rgba(119, 119, 119, 0.7)
        line-height 1.3

    .banners
        top 5%
        position relative
        width 100%
        height 240px

        img
            position absolute
            width 120px

    .contact-card,.contact-card-travel
        background rgba(240,240,255, 0.5)
        position absolute
        top 50%
        margin-top -160px
        bottom 20px
        width 80%
        padding 5% 5%
        height 320px
        left 5%
        border-radius 15px
        p
            margin-bottom 3px
        .code-info
            .left
                float left
                padding 10px
            .right
                padding 10px
                line-height 30px
                float left
                font-size 16px
    .contact-card-travel
        padding 3% 5%
        margin-top -180px
        height 360px
        line-height 1.5
        .bf
            color #601f15
        h2
            color #601f15
            text-align center
            font-size 20px
            margin 10px
            line-height 1.2
        h3
            color #601f15
            margin-top 5px
            font-size 14px


    .travel-intro
        position absolute
        top 100%
        text-align center
        margin-top -30px
        z-index 26

        transition all 0.2s ease
        -webkit-transition all 0.2s ease

        background rgba(255, 255, 200, 0.9)
        border-radius 15px
        width 70%
        padding 0 5%
        height 80%
        left 10%
        .title
            text-align center
            padding 10px 0

        .swiper-slide
            height 100%
            text-align center
            div
                text-align center
            div.info
                padding:5px 20px 20px 20px
                line-height 150%
                text-align left
                font-size 12px
                h5
                    margin 10px 10px 10px -10px


        .travel-arrow
            position: absolute
            bottom 0
            left 0
            width 100%
            text-align center
            img
                margin 20px

fieldset
    border 0

.invitation-form
    padding 20px
    .title
        font-size 18px
        text-align center

    label
        display block
        margin-bottom 5px

    input
        width 100%
        border 1px solid #ccc
        height 18px

button, .button
    font-size 16px
    color #fff
    vertical-align middle
    border 0
    padding 8px 15px
    background rgb(61,143,56)
    border-radius 5px
    text-decoration none
    margin 0 5px
    font-size 14px


.arrow
    position: fixed
    left 50%
    margin-left -19px
    z-index 50

    transition opacity 0.2s ease
    -webkit-transition opacity 0.2s ease

    img
        width 38px


@keyframes arrow-up-shake
    0%
        top 10px
    50%
        top 15px

@keyframes arrow-down-shake
    0%
        bottom 10px
    50%
        bottom 15px

.arrow-up
    top 3px
    animation arrow-up-shake 1s infinite
    -webkit-animation arrow-up-shake 1s infinite

.arrow-down
    bottom 3px
    animation arrow-down-shake 1s infinite
    -webkit-animation arrow-down-shake 1s infinite
